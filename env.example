# RiftboundOCR Service Configuration

# Service Configuration
SERVICE_HOST=0.0.0.0
SERVICE_PORT=8002
DEBUG=false

# OCR Settings
USE_GPU=false
ENABLE_LOGGING=true

# Main API Integration (Riftbound Top Decks API)
MAIN_API_URL=https://your-riftbound-api.vercel.app/api
MAIN_API_KEY=your-api-key-here

# File Upload Limits
MAX_FILE_SIZE_MB=10
MAX_BATCH_SIZE=10

# Parallel Processing (Phase 9 - Optional)
# Enable parallel batch processing for 40-60% speed improvement
ENABLE_PARALLEL=false
# Number of parallel workers (2-4 recommended for CPU, 1-2 for GPU)
MAX_WORKERS=2

# Model Cache Paths (Docker volumes)
PADDLEOCR_MODEL_PATH=/root/.paddlex
EASYOCR_MODEL_PATH=/root/.EasyOCR

